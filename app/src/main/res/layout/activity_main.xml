<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.main.MainActivity">
    <FrameLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/c_2395ff">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_search"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>
    <View
        android:background="#dedede"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_index"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:drawableTop="@drawable/index_selector"
            android:textSize="12sp"
            android:textColor="@color/text_selector"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/radio_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/category_selector"
            android:textColor="@color/text_selector"
            android:textSize="12sp"
            android:text="分类"/>
        <RadioButton
            android:id="@+id/radio_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/mine_selector"
            android:textColor="@color/text_selector"
            android:textSize="12sp"
            android:text="我的"/>
    </RadioGroup>
</LinearLayout>